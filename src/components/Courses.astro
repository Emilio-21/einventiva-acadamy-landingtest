---
const courses = [
  {
    title: 'Desarrollo Web Full Stack',
    description: 'Aprende las tecnologías más demandadas del desarrollo web',
    image: 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=800'
  },
  {
    title: 'Marketing Digital',
    description: 'Domina las estrategias de marketing online',
    image: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800'
  },
  {
    title: 'Diseño UX/UI',
    description: 'Crea interfaces intuitivas y experiencias memorables',
    image: 'https://images.unsplash.com/photo-1561070791-2526d30994b5?w=800'
  }
];
---

<section id="courses" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Nuestros Cursos</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {courses.map(course => (
        <div class="bg-white rounded-lg overflow-hidden shadow-lg">
          <img src={course.image} alt={course.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{course.title}</h3>
            <p class="text-gray-600 mb-4">{course.description}</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-primary">{course.price}</span>
              <a href="#contact" class="bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded transition-colors">
                Más Info
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>