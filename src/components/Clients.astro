---
const clients = [
  { name: 'Cliente 1', logo: 'https://via.placeholder.com/150' },
  { name: 'Cliente 2', logo: 'https://via.placeholder.com/150' },
  { name: 'Cliente 3', logo: 'https://via.placeholder.com/150' },
  { name: 'Cliente 4', logo: 'https://via.placeholder.com/150' },
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Nuestros Clientes</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {clients.map(client => (
        <div class="flex items-center justify-center">
          <img src={client.logo} alt={client.name} class="h-20 object-contain" />
        </div>
      ))}
    </div>
  </div>
</section>